<html>

<head>
    <title>
        <%= title %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
</head>

<body>
    <header>
        <div class="navbar navbar-dark bg-dark shadow-sm">
            <div class="container">
                <a href="#" class="navbar-brand d-flex align-items-center">
                    <strong>Betcha Game</strong>
                </a>
                <button name="logout" type="button" class="btn btn-primary">
                    <a href="/logout" class="btn btn-primary my-1">Logout</a>
                </button>
            </div>
        </div>
    </header>
    <br>
    <div class="container-sm text-center">
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
            Party's creation
        </button>
    </div>
    
    <div class="container-sm text-center">
        <br>
        <h2>Parties Invites</h2>
        <br>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Invited by</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody id=listInvites>
            </tbody>
          </table>
        </div>

    <div class="container-sm text-center">
    <br>
    <h2>Spectate a party</h2>
    <br>
    <table class="table">
        <thead>
          <tr>
            <th scope="col">Round</th>
            <th scope="col">J1</th>
            <th scope="col">J2</th>
            <th scope="col"></th>
          </tr>
        </thead>
        <tbody id=listParties>
        </tbody>
      </table>
    </div>

    <div class="container-sm text-center">
        <br>
        <h2>My Games</h2>
        <br>
        <table class="table">
            <thead>
              <tr>
                <th scope="col">Round</th>
                <th scope="col">J1</th>
                <th scope="col">J2</th>
                <th scope="col"></th>
              </tr>
            </thead>
            <tbody id=listmyparties>
            </tbody>
          </table>
        </div>
            <!-- Modal -->
        <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Party creation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <form action="/api/party" method="post">
                    <div class="modal-body">
                        <h6 class="subtitle" id="LabelSubtitle">Choose your opponant</h6>
                        <select class="form-select" name="opposant" id="opposant">
                        </select>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                        <button type="submit" class="btn btn-primary">Create Party</button>
                    </div>
                    </form>
                </div>
            </div>
        </div>
        
        <div class="modal fade" id="denyBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
            aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Party creation</h5>
                        <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                    </div>
                    <div class="modal-body">
                        You can't create another party without ending or delete the party you have initied.
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>
    </form>
    <script src="https://moment.github.io/luxon/global/luxon.min.js"></script>
    <script src="./assets/js/home.js"></script>
    <script src="./assets/js/party.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
        crossorigin="anonymous"></script>
</body>