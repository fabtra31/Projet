</head>

<body>
	<header>
		<div class="navbar navbar-dark bg-dark shadow-sm">
			<div class="container">
				<a href="#" class="navbar-brand d-flex align-items-center">
					<strong>Betcha Game</strong>
				</a>
				<button name="logout" type="button" class="btn btn-primary">
					<a href="/logout" class="btn btn-primary my-1">Logout</a>
				</button>
			</div>
		</div>
	</header>
	<div class="container">
		<div class="row text-center mt-5 align-items-center" id="info">
			<div class="col">
				<h2>
					<%= usernames[0] %>
				</h2>
			</div>
			<div class="col">
				<h5>
					<%= party.J1.coins %> 游눯
				</h5>
			</div>
			<div class="col"></div>
			<div class="col"></div>
			<div id="info" class="col-3">
				<h4></h4>
			</div>
			<div class="col"></div>
			<div class="col"></div>
			<div class="col">
				<h5>
					<%= party.J2.coins %> 游눯
				</h5>
			</div>
			<div class="col">
				<h2>
					<%= usernames[1] %>
				</h2>
			</div>
		</div>
		<br>
		<div id="input-value-row" class="container-sm text-center">
			<div id="imput-value" class="row">
				<div id="J1_bet" class="col-sm">
					<input type="number" class="form-control" id="J1bet" placeholder="" value="" required="" min="1"
						max="100" max="100">
						<br>
					<button id="buttonJ1" type="button" class="btn btn-primary">Bet</button>
				</div>
				<div class="col-sm"></div>
				<div class="col-sm"></div>
				<div class="col-sm"></div>
				<div id="J2_bet" class="col-sm">
					<input type="number" class="form-control" id="J2bet" placeholder="" value="" required="" min="1"
						max="100"><br>
						<button id="buttonJ2" type="button" class="btn btn-primary">Bet</button>
				</div>
				
			</div>
		</div>
		<br>
		<br>
		<table id="table-game" class="text-center table table-bordered">
			<thead>
				<tr id="bar">
					<th scope="col"><%= (party.pointer == 0) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 1) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 2) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 3) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 4) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 5) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 6) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 7) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 8) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 9) ? "游린" : "" %></th>
					<th scope="col"><%= (party.pointer == 10) ? "游린" : "" %></th>
				</tr>
			</thead>
			<tbody>
			</tbody>
		</table>
		<br>
	</div>
	


	<script>
		//Check si le user est un joueur ou un spectateur
		const isPlayer = '<%= isplayer %>';
		const user = '<%= req.session.user.id %>';
	</script>

	<script src="https://moment.github.io/luxon/global/luxon.min.js"></script>
	<script src="/assets/js/party.js"></script>
	<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"
		integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p"
		crossorigin="anonymous"></script>
</body>